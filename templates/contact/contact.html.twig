{% extends "layout.html.twig" %}

{% block title %}
    YourSport - Contact
{% endblock %}

{% block content %}

    <section id="main" class="container medium">

        <header>
            <h2>Contactez-Nous</h2>
        </header>

        <div class="box">

            {# Message si le mail de contact à bien été envoyé #}

            {% for message in app.flashes('notice') %}
                <div class="messageFlash">
                    {{ message }}
                </div>
            {% endfor %}


            {# FORMULAIRE DE CONTACT#}

            {{ form_start(form, { attr: {novalidate: 'novalidate' }} ) }}

            <div class="row gtr-50 gtr-uniform">

                <div class="col-6 col-12-mobilep">
                    {{ form_row(form.prenom) }}
                </div>

                <div class="col-6 col-12-mobilep">
                    {{ form_row(form.nom) }}
                </div>


                <div class="col-12">
                    {{ form_row(form.email) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.message) }}
                </div>

                <div class="col-12">
                    <ul class="actions special">
                        <li>{{ form_row(form.submit) }}</li>
                    </ul>
                </div>
                <span class="badge badge-primary mx-auto" id="ip"></span>


            </div> <!-- ./gtr-50 -->

            {{ form_end(form) }}

            {# FIN FORMULAIRE #}

        </div> <!-- ./box -->

    </section> <!-- ./main -->

{% endblock %}

