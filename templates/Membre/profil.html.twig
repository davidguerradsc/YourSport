{% extends "layout.html.twig" %}

{% block title %}
    Mon Profil
{% endblock %}

{% block content %}

    <section id="main" class="container">

        <header>
            <h2>Mon Profil</h2>
        </header>

        <div class="box">

            {% for message in app.flashes('notice') %}
                <div class="messageFlash">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="row">

                <div class="col-6 col-12-narrower">
                    <h4><em>Nom :</em></h4>
                    <p class="editprofil">{{ app.user.nom }} &nbsp; &nbsp; <a href="{{ path('membre_editProfil') }}"><i class="far fa-edit"></i></a></p>
                </div>

                <div class="col-6 col-12-narrower">
                    <h4><em>Prenom :</em></h4>
                    <p class="editprofil">{{ app.user.prenom }} &nbsp; &nbsp; <a href="{{ path('membre_editProfil') }}"><i class="far fa-edit"></i></a></p>
                </div>

                <div class="col-12">
                    <h4><em>Pseudo :</em></h4>
                    <p class="editprofil">{{ app.user.pseudo }} &nbsp; &nbsp; <a href="{{ path('membre_editProfil') }}"><i class="far fa-edit"></i></a></p>
                </div>

                <div class="col-6 col-12-narrower">
                    <h4><em>Ville :</em></h4>
                    <p class="editprofil">{{ app.user.ville }} &nbsp; &nbsp; <a href="{{ path('membre_editProfil') }}"><i class="far fa-edit"></i></a></p>
                </div>

                <div class="col-6 col-12-narrower">
                    <h4><em>Département :</em></h4>
                    <p class="editprofil">{{ app.user.departement }} &nbsp; &nbsp; <a href="{{ path('membre_editProfil') }}"><i class="far fa-edit"></i></a></p>
                </div>

                <div class="col-12">
                    <h4><em>Adresse Email :</em></h4>
                    <p class="editprofil">{{ app.user.email }} &nbsp; &nbsp; <a href="{{ path('membre_editProfil') }}"><i class="far fa-edit"></i></a></p>
                </div>

                <div class="col-12">
                    <h4><em>Mot de passe :</em></h4>
                    <p class="editprofil">{{ app.user.password }} &nbsp; &nbsp; <a href="{{ path('membre_editProfil') }}"><i class="far fa-edit"></i></a></p>
                </div>

                <div class="col-12" style="margin: 18px">
                    <h4><i class="fas fa-arrow-right"></i> &nbsp; <a href="/">Me désinscrire</a></h4>
                </div>

                {#<div class="col-12">#}
                {#<h4><em>Date de Naissance</em></h4>#}
                {#<p>{{ app.user.date_de_naissance }}</p>#}
                {#</div>#}


                {#<div class="col-12">#}
                {#<h4><em>Date d'inscription :</em></h4>#}
                {#<p>{{ app.user.date_inscription }}</p>#}
                {#</div>#}


            </div> <!-- ./row -->

        </div> <!-- ./box -->

    </section>

{% endblock %}