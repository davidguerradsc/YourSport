{% extends "layout.html.twig" %}

{% block title %}
    Connexion
{% endblock %}

{% block content %}
    <section id="main" class="container medium">

        <header>
            <h2>Connectez-vous</h2>
        </header>

        <!-- THEME FORMULAIRE CONNEXION -->

        <div class="box">

            {{ form_start(form, { attr: {novalidate: 'novalidate' }} ) }}

            <div class="row gtr-50 gtr-uniform">

                <div class="col-12">
                    {{ form_row(form.email) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.password) }}
                </div>

                <div class="col-12">
                    <ul class="actions special">
                        <li>{{ form_row(form.submit) }}</li>
                    </ul>
                </div>

            </div> <!-- ./gtr-50 -->

            {{ form_end(form) }}

        </div> <!-- ./box -->

    </section>
{% endblock %}
